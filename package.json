{
  "name": "electron-quick-start-typescript",
  "version": "1.0.0",
  "description": "Check vm",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "electron:linux": "npm run build && electron-builder build --linux",
    "electron:windows": "npm run build && electron-builder build --windows",
    "electron:mac": "npm run build && electron-builder build --mac"
  },
  "main": "./dist/main.js",
  "build": {
    "appId": "check.vm",
    "directories": {
      "output": "release/"
    },
    "mac": {
      "category": "check.vm.test"
    },
    "files": [
      "./dist/**/*",
      "./src/main.js"
    ]
  },
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "TB",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.3.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "electron-builder": "^22.9.1"
  }
}
